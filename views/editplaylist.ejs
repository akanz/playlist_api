<%- include ('partials/header') -%>

<section class="signup-form">
    <h3>Edit <%= playlist.title %></h3>
    <form action="/playlist/<%= playlist._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label>title</label>
          <input type="text" class="form-control" name="form[title]" value="<%= playlist.title %>">
        </div>
        <div class="form-group">
            <label>Playlist cover</label>
          <input type="text" class="form-control" name="form[image]" value="<%= playlist.image %>">
        </div>
        <button type="submit" class="btn btn-slate">Edit</button>
      </form>
</section>
